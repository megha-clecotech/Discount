            <p>
              <%= link_to 'Coupon Donation' , new_coupon_path , id: "removelink" %>
            </p>
          </div>
          <div class="Blog-Icon-container">
            <i class="fa fa-tag icons" aria-hidden="true"></i>
            <p>
            <div class="dropdown">
              <p class="dropbtn" id="removelink">Categories</p>
              <div class="dropdown-content">
                <% $arr.each do |c| %>
                  <%= link_to c.name, category_path(c) %>
                    <% end %>
              </div>
            </div>
            </p>
          </div>
          <div class="Blog-Icon-container">
            <i class="fa-solid fa-rss icons" aria-hidden="true"></i>
            <p>
              <% if user_signed_in? %>
                <%= link_to :Profile , home_profile_path, id: "removelink" %>
