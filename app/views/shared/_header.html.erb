        <% if user_signed_in? %>
          <%= link_to "Logout" , destroy_user_session_path, method: :delete, :class=> 'navbar-link' , id: "removelink"
            %>
            <% else %>
              <%= link_to "Login" , new_user_session_path , id: "removelink" %>
                <% end %>
      </span>
      <span class="ms-1">|</span>
      <span class="ms-1">
