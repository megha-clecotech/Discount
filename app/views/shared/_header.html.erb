<div class="container">
  <div class="row">
    <div class="col-md-6 col-sm-12 center-align">
      <div>
        <%= link_to :Home , root_path , id: "removelink" %>
      </div>
      <div style="margin-left: 1rem">
        <%= link_to 'About Us' , home_about_path, id: "removelink" %>
      </div>
      <div style="margin-left: 1rem">
