              <%= link_to "Sign up" , new_user_registration_path, :class=> 'navbar-link' , id: "removelink" %>
                <% end %>
      </span>
    </div>
  </div>
</div>
<div class="Nav">
  <div class="container">
    <div class="row">
      <div class="col-md-5 col-sm-4 col-6 center-align col-One">
        <p class="Heading">Discount<span>Jugaadu</span></p>
      </div>
      <div class="col-md-4 col-12 center-align col-two">
        <div class="search">
          <!-- <span class="fa fa-search"></span>
          <input placeholder="Search term" /> -->
          <%= form_tag(search_path, :method=> "get") do %>
            <%= search_field_tag :search, params[:search],placeholder: "Search term" %>
              <%= button_tag "search" ,id: "search-button" , :class=> "btn btn-primary",:name => nil ,style:"height:
                35px;width: 67px;padding-bottom: 30px;" %>

                <% end %>
        </div>
      </div>
