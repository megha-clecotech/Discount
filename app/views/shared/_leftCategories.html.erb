<div class="container">
  <div class="row">
    <div class="col-md-3 col-sm-12 gy-4">
      <div class="accordion" id="accordionExample">

        <% $arr.each do |main_category| %>
          <div class="accordion-item">
            <h2 class="accordion-header" id="headingThree<%= main_category.id %>">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                data-bs-target="#collapseThree<%= main_category.id %>" aria-expanded="false"
                aria-controls="collapseThree">
                <%= main_category.name %>
              </button>
            </h2>
            <% main_category.subcategory.each do |s|%>
              <div id="collapseThree<%= main_category.id %>" class="accordion-collapse collapse"
                aria-labelledby="headingThree<%= main_category.id %>" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                  <% if s.name!=main_category.name %>
                    <strong>
                      <%= link_to s.name , category_path(s.id) , id: "removelink" %>
                    </strong>
                    <% end %>
                </div>
              </div>
              <% end %>
          </div>
          <% end %>
      </div><br />
      <div style="border:1px solid lightgrey ;background-color: #f2f2f2;padding:7px 7px 7px 7px ;">
        <center>
          <h3>Contact Us</h3>
        </center>
        <%= form_with model: @contact , class:"my-form" do |f| %>
          <div class="form-group">
            <%= f.label :Name %>
              <%= f.text_field :name, class: "form-control" , id: "form-name" ,placeholder: "Enter your Name" %>
          </div>
          <br />
          <div class="form-group">
            <%= f.label "Email Address" %>
              <%= f.text_field :email, class: "form-control" , id: "form-name" ,placeholder: "Email Address" %>
          </div>
          <br />
          <div class="form-group">
            <%= f.label "Telephone" %>
              <%= f.text_field :telephone, class: "form-control" , id: "form-name" ,placeholder: "Telephone" %>
          </div>
          <br />
          <div class="form-group">
            <%= f.label "Email your Message" %>
              <%= f.text_field :msg, class: "form-control" , id: "form-name" ,placeholder: "Message" %>
          </div>
          <br />
          <%= f.submit %>
            <% end %>
      </div>

    </div>
    <%= render 'shared/couponList' %>
  </div>
</div>