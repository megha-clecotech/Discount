<h1>Coupons</h1>
<% if @couponsea.nil? %>
  <% coupons = $coupons%>
<% else %>
  <% coupons = @couponsea %> 
<% end %> 
<% coupons.each do |c|%>
    <strong>ID :</strong><%= c.id %><br/>
    <%= c.title %><br/>
    <%= c.description %><br/>
    <%= c.code %><br/>
    <% if c.coupon_file.attached? %>
        <%= image_tag url_for(c.coupon_file) %><br/>
    <% end %> 
    <%= c.expiry_date %><br/>
    <%= c.coins_needed %><br/>
    <%= c.user_id %><br/>
    <%= link_to 'Show', c, class: "btn btn-primary", data: { bs_toggle: "modal", bs_target: "#showUserModal", remote: true } %><br/>
<% end %>
<%= link_to "Add Coupon", new_user_coupon_path(@user) %><br/>

<!-- Modal -->
<div class="modal fade" id="showUserModal" tabindex="-1" aria-labelledby="showUserModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="showUserModalLabel">User Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
        <div id="showUserDetails">
      </div>
  </div>
</div>